@{
    Layout = "";
}

<div id="personalinfo" class="section scrollspy">
    <div class="card">
        <div class="card-content">
            <h4 class="header">Personal Information</h4>
            <div class="divider" style="margin-bottom: 10px;"></div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <input id="fname" type="text" class="validate">
                    <label for="fname">First Name</label>
                </div>
                <div class="input-field col s12 m6">
                    <input id="mname" type="text" class="validate">
                    <label for="mname">Middle Name</label>
                </div>
                <div class="input-field col s12 m6">
                    <input id="lname" type="text" class="validate">
                    <label for="lname">Last Name</label>
                </div>
                <div class="input-field col s12 m6">
                    <select>
                        <option value="" disabled selected>Select your gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <label>Gender</label>
                </div>
                <div class="input-field col s12 m6">
                    <input id="number" type="number" data-length="11">
                    <label for="number">Cell Number</label>
                </div>
                <div class="input-field col s12 m6">
                    <input id="bdate" type="text" class="datepicker">
                    <label for="bdate">Birthdate</label>
                </div>
            </div>
            <h4 class="header" style="margin-top: -20px;">Skills</h4>
            <div class="divider" style="margin-bottom: 10px;"></div>
            <div class="row">
                <div class="col s12 m12">
                    <div class="chips chips-autocomplete"></div>
                </div>
            </div>
        </div>
    </div>
</div>