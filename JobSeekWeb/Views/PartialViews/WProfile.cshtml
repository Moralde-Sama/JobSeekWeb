@{
    Layout = "";
}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-user">
                    <div class="image">
                        <img src="~/Content/moral/Images/kodaikanal-2836301.jpg" alt="..." />
                    </div>
                    <div class="content">
                        <div class="author">
                            <img class="avatar border-violet" src="~/Content/moral/Images/eriri.png" />
                            <h3 class="title">
                                {{fullname()}}<br />
                                <small>@@{{userInfo.UserName}}</small>
                            </h3>
                        </div>
                        <p class="description text-center">
                            "{{userInfo.header}}"
                        </p>
                    </div>
                    <hr>
                    <div class="text-center">
                        <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i>Moralde-Sama</button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i>Moralde-Sama</button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i>Moralde-Sama</button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-github"></i>Moralde-Sama</button>
                    </div>
                </div>
            </div>
            <div class="col-md-12" style="display: flex; justify-content: center;">
                <div class="row" style="width: 100%;">
                    <div class="col-sm-12 col-md-4">
                        <div class="card content_center active">
                            <div class="content">
                                <a class="list-btn active">
                                    <i class="pe-7s-user"></i>
                                    <p>Personal Details</p>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4">
                        <div class="card content_center">
                            <div class="content">
                                <a class="list-btn">
                                    <i class="pe-7s-note2"></i>
                                    <p>Company</p>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4">
                        <div class="card content_center">
                            <div class="content">
                                <a class="list-btn">
                                    <i class="pe-7s-box2"></i>
                                    <p>Projects</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Settings 
                            <i class="pe-7s-pen" ng-click="disabled('settings')" ng-hide="!settings"
                               style="float: right;"></i>
                        </h4>
                    </div>
                    <div class="content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="alert alert-info" style="padding-top: 12px;">
                                    <button type="button" aria-hidden="true" class="close" data-dismiss="alert">
                                        <i class="pe-7s-close"></i>
                                    </button>
                                    <span>Note: Only you who can see the settings.</span>
                                </div>
                            </div>
                        </div>
                        <form name="settingsform">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label ng-class="validateLabel(settingsform.UserName.$valid)">Username 
                                        <span ng-hide="settingsform.UserName.$valid"> - Required</span></label>
                                        <input id="username" name="UserName" ng-model="userInfo.UserName" type="text" 
                                               ng-class="validateInput(settingsform.UserName.$valid)"
                                               ng-disabled="settings" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label ng-class="validateLabel(settingsform.email.$valid)">Email 
                                        <span ng-hide="settingsform.email.$valid"> - Required</span></label>
                                        <input type="email" name="email" class="form-control" ng-model="userInfo.Email"
                                               ng-class="validateInput(settingsform.email.$valid)"
                                               ng-disabled="settings" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>New Password</label>
                                        <input id="password" ng-model="userInfo.newpassword" type="password" class="form-control"
                                               placeholder="Optional" ng-disabled="settings">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Repeat Password</label>
                                        <input id="repassword" ng-model="userInfo.repassword" type="password" class="form-control"
                                               placeholder="Optional" ng-disabled="settings">
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="row">
                            <div class="col-md-12 text-center animate" ng-hide="settings">
                                <a class="btn btn-mywarning" ng-click="cancel('settings')">Cancel</a>
                                <a class="btn btn-violet" ng-click="update('settings', settingsform.$valid)"
                                   ng-disabled="!settingsform.$valid">Update Settings</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Personal Information 
                        <i class="pe-7s-pen" ng-click="disabled('personal')" ng-hide="!personal"
                           style="float: right;"></i></h4>
                    </div>
                    <div class="content">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input type="text" class="form-control" ng-model="userInfo.fname"
                                           ng-disabled="personal">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Middle Name</label>
                                    <input type="text" class="form-control" ng-model="userInfo.mname"
                                           ng-disabled="personal">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Last Name</label>
                                    <input id="lastname" type="text" class="form-control" ng-model="userInfo.lname"
                                           ng-disabled="personal">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <label for="gender">Gender</label>
                                <select id="gender" ng-model="userInfo.gender" class="form-control"
                                        ng-disabled="personal">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Cellphone Number</label>
                                    <input type="number" class="form-control"
                                           ng-model="userInfo.cellnum" ng-disabled="personal">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Birthdate</label>
                                    <input type="date" class="form-control"
                                           ng-model="userInfo.birthdate" ng-disabled="personal">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Header</label>
                                    <textarea id="header" rows="2" cols="80" class="form-control"
                                              ng-disabled="personal" ng-model="userInfo.header"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center animate" ng-hide="personal">
                                <a class="btn btn-mywarning" ng-click="cancel('personal')">Cancel</a>
                                <a class="btn btn-violet" ng-click="update('personal')">Update Personal Info</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Address 
                            <i class="pe-7s-pen" ng-click="disabled('address')" ng-hide="!address"
                               style="float: right;"></i>
                        </h4>
                    </div>
                    <div class="content">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="region">Region</label>
                                <select id="region" class="form-control" name="state" 
                                        ng-disabled="address">
                                    <option value="{{region.regCode}}" ng-repeat="region in regions"
                                            ng-selected="regionSelected(region.regCode)">{{region.regDesc}}</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="province">Province</label>
                                <select id="province" class="form-control" name="state" 
                                        ng-disabled="address">
                                    <option value="{{province.provCode}}" ng-repeat="province in provinces"
                                            ng-selected="provinceSelected(province.provCode)">
                                        {{province.provDesc}}
                                    </option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="city">City</label>
                                <select id="city" class="form-control"
                                        ng-disabled="address">
                                    <option value="{{city.citymunCode}}" ng-repeat="city in cities"
                                            ng-selected="citySelected(city.citymunCode)">
                                        {{city.citymunDesc}}
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 15px; margin-top: 13px;">
                            <div class="col-md-4">
                                <label for="brgy">Baranggay</label>
                                <select id="brgy" class="form-control"
                                        ng-disabled="address">
                                    <option value="{{brgy.brgyCode}}" ng-repeat="brgy in brgys"
                                            ng-selected="brgySelected(brgy.brgyCode)">
                                        {{brgy.brgyDesc}}
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center animate" ng-hide="address">
                                <a class="btn btn-mywarning" ng-click="cancel('address')">Cancel</a>
                                <a class="btn btn-violet" ng-click="update('address')">Update Address</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Skills
                            <i class="pe-7s-pen" ng-click="disabled('skills')" ng-hide="!skills"
                               style="float: right;"></i>
                        </h4>
                    </div>
                    <div class="content">
                        <div class="row" style="margin-bottom: 15px; margin-top: 13px;">
                            <div class="col-md-12">
                                <select id="skills" class="form-control" multiple name="state"
                                        ng-disabled="skills">
                                    <option value="Male" selected>Male</option>
                                    <option value="Female" selected>Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center animate" ng-hide="skills">
                                <a class="btn btn-mywarning" ng-click="cancel('skills')">Cancel</a>
                                <a class="btn btn-violet" ng-click="update('skills')">Update Skills</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>