
@{
    Layout = null;
}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Aira Messages</h4>
                        <hr style="margin-top: 10px;" />
                    </div>
                    <div class="content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="talk-bubble tri-right round right-in" style="float: right;">
                                    <div class="talktext">
                                        <p>HIIIIIIIIIIII!</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="talk-bubble tri-left round left-in"
                                     style="background-color: #F7F7F8;">
                                    <div class="talktext" style="color: black;">
                                        <p>Hello!</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div style="margin: -5px 10px 15px 10px">
                        <input type="text" class="form-control" placeholder="Type your message here"
                               style="width: 80%; display: inline-block;">
                       <a class="btn btn-violet"
                               style="width: 19%; display: inline-block;">Send</a>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Contacts</h4>
                        <hr style="margin-top: 10px;" />
                    </div>
                    <div class="content" style="margin-top: -20px;">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card" style="border: 1px solid green;">
                                    <div class="content">
                                        <div style="margin-top: -5px;">
                                            <img src="~/Uploads/Worker/Img/eriri.png" width="50" height="50"
                                                 style="border-radius: 50%; border: 1px solid #dbccee;" />
                                            <span style="font-weight: bold; margin-left: 5px;">Eriri S. Spencer</span>
                                            <label style="float: right; color: green;">Online</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12" style="margin-top: -20px;">
                                <div class="card">
                                    <div class="content">
                                        <div style="margin-top: -5px;">
                                            <img src="~/Uploads/Worker/Img/eriri.png" width="50" height="50"
                                                 style="border-radius: 50%; border: 1px solid #dbccee;" />
                                            <span style="font-weight: bold; margin-left: 5px;">Eriri S. Spencer</span>
                                            <label style="float: right;">Offline</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
