@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Worker</title>
    <base href="/" />
    <link href="~/Content/moral/bootstrap-4.3.1-dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/moral/css/worker-css.css" rel="stylesheet" />
    <link href="~/Content/moral/select2/css/select2.css" rel="stylesheet" />
    <link href="~/Content/moral/Swal/sweetalert2.css" rel="stylesheet" />
</head>
<body ng-app="Job">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: white;">
        <a class="navbar-brand" href="../">
            <img src="https://getbootstrap.com/docs/4.3/assets/brand/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt="">
            JobSeeker
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto"></ul>
            <div class="form-inline my-2 my-lg-0" style="color: black;" ng-controller="LogoutCtrl">
                @Html.AntiForgeryToken()
                <button type="button" class="btn btn-outline-primary" ng-click="logout()">Logout</button>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top: 20px;" ng-controller="WorkerProfileCtrl">
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
            The email confirmation has been sent to <strong>@HttpContext.Current.User.Identity.GetUserEmail()</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="card" style="width: 100%;">
            <div class="card-body">
                <h5 class="card-title">Personal Information</h5>
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            <label for="fname">First Name</label>
                            <input type="text" class="form-control" id="fname" ng-model="data.fname">
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            <label for="mname">Middle Name</label>
                            <input type="text" class="form-control" id="mname" ng-model="data.mname">
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            <label for="mname">Last Name</label>
                            <input type="text" class="form-control" id="mname" ng-model="data.lname">
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <label for="gender">Last Name</label>
                        <select id="gender" class="form-control" ng-model="data.gender">
                            <option value="" disabled selected>Select your gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group margin">
                            <label for="number">Cellphone Number</label>
                            <input type="number" class="form-control" id="number" data-length="11"
                                   ng-model="data.cellnum">
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            <div class='form-group'>
                                <label for="bdate">Birthdate</label>
                                <input type='date' id="bdate" ng-model="data.birthdate" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card" style="width: 100%; margin-top: 20px;">
            <div class="card-body">
                <h5 class="card-title">Address</h5>
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <label for="region">Region</label>
                        <select id="region" class="form-control" ng-change="optionChanged(data.region, 'Region')" ng-model="data.region">
                            <option value="" disabled selected>Select your region</option>
                            <option ng-repeat="region in regions" value="{{region.regCode}}"
                                    ng-init="$last && finishedSelect('region')">
                                {{region.regDesc}}
                            </option>
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <label id="lblprovince" for="province">Province</label>
                        <select id="province" class="form-control" disabled ng-model="data.province"
                                ng-change="optionChanged(data.province, 'Province')">
                            <option value="" disabled selected>Select your province</option>
                            <option ng-repeat="province in provinces" value="{{province.provCode}}"
                                    ng-init="$last && finishedSelect('province')">
                                {{province.provDesc}}
                            </option>
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-6" style="margin-top: 10px;">
                        <label for="city">City/Municipality</label>
                        <select id="city" class="form-control" disabled ng-model="data.city" disable
                                ng-change="optionChanged(data.city, 'City')">
                            <option value="" disabled selected>Select your city/Municipality</option>
                            <option ng-repeat="city in cities" value="{{city.citymunCode}}"
                                    ng-init="$last && finishedSelect('city')">
                                {{city.citymunDesc}}
                            </option>
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-6" style="margin-top: 10px;">
                        <label for="brgy">Baranggay</label>
                        <select id="brgy" class="form-control" disabled ng-model="data.brgy" disable>
                            <option value="" disabled selected>Select your baranggay</option>
                            <option ng-repeat="brgy in brgys" value="{{brgy.brgyCode}}"
                                    ng-init="$last && finishedSelect('brgy')">
                                {{brgy.brgyDesc}}
                            </option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="card" style="width: 100%; margin-top: 20px;">
            <div class="card-body">
                <h5 class="card-title">Skills</h5>
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <label for="category">Category</label>
                        <select id="category" class="form-control" ng-model="data.categoryId"
                                ng-change="optchangedCategory(data.categoryId)">
                            <option value="" disabled selected>Select a category</option>
                            <option ng-repeat="category in categories" value="{{category.categoryId}}"
                                    ng-init="$last && finishedSelect('category')">
                                {{category.title}}
                            </option>
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <label for="skills">Skills</label>
                        <select id="skills" class="form-control" multiple="multiple" disabled>
                            <option ng-repeat="skill in skills" value="{{skill.skillId}}"
                                    ng-init="$last && finishedSelect('skills', 'Select your skills')">
                                {{skill.title}}
                            </option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="center_content" style="margin: 20px 0 20px 0;">
            <button type="button" class="btn btn-outline-primary" ng-click="saveDetails(data)">Save Profile Details</button>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Content/moral/Swal/sweetalert2.min.js"></script>
    <script src="~/Scripts/AngularJS/angular.min.js"></script>
    <script src="~/Scripts/AngularJS/Module.js"></script>
    <script src="~/Scripts/AngularJS/Controllers/worker-details.js"></script>
    <script src="~/Content/moral/bootstrap-4.3.1-dist/js/bootstrap.min.js"></script>
    <script src="~/Content/moral/select2/js/select2.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>

</body>
</html>